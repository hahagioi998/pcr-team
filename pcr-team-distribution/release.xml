<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>assembly</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>config/**</include>
                <include>log/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../db</directory>
            <includes>
                <include>data.db</include>
                <include>members.csv</include>
            </includes>
            <outputDirectory>db</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>start.bat</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.huiyadan.pcr:pcr-team-starter</include>
            </includes>
            <binaries>
                <outputDirectory>/</outputDirectory>
                <unpack>false</unpack>
                <excludes>
                    <exclude>*</exclude>
                </excludes>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>